<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <com.lingvapps.quizword.renew.CardPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_pager" />
    
    <Button
        android:id="@+id/navigation_back"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:alpha="0.3"
        android:background="@drawable/navigation_back" />

    <Button
        android:id="@+id/mode_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:alpha="0.3"
        android:background="@drawable/mode_ab" />
    
    <Button
        android:id="@+id/shuffle_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/mode_button"
        android:alpha="0.3"
        android:background="@drawable/shuffle" />
    
    <Button
        android:id="@+id/speech_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/shuffle_button"
        android:alpha="0.3"
        android:background="@drawable/speech" />
    
    <TextView
        android:id="@+id/counter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:alpha="0.3"
        android:text="1/25"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
